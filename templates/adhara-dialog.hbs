<div id="{{modalId}}" tabindex="-1" role="dialog" {{addAttr modalAttributes '{"class": "modal fade"}'}}>
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{include titleTemplate this}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="modal-msg">{{include messageTemplate this}}</div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                {{#each buttons as |button index|}}
                    <button {{addAttr button.attributes "{\"type\": \"button\"}"}}>{{button.text}}</button>
                {{/each}}
            </div>
        </div>
    </div>
</div>