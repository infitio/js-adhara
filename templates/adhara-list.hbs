<div id="adharaTable_{{title}}" class="adhara-table-container">
    {{#if title}}
        <div>
            <h3>{{title}}</h3>
        </div>
    {{/if}}
    {{#if addNew}}
        <div>
            <button class="btn btn-sm btn-primary">Add new {{title}}</button>
        </div>
    {{/if}}
    {{#if state.fetching_data}}
        <div class="adhara-list-wrapper">
            {{include fetchingDataTemplate this}}
        </div>
    {{else}}
        {{#if data}}
            <div class="adhara-list-wrapper">
                {{include listTemplate this}}
            </div>
            {{#if isPaginationRequired}}
                <div class="adhara-table-nav float-right btn-group" role="group">
                    <button style="display: inline-block; margin: 0 2px;" {{#if isFirstPage}}disabled{{/if}} class="btn btn-sm btn-link" data-onclick="onPreviousPage">previous</button>
                    <button style="display: inline-block; margin: 0 2px;" {{#if isLastPage}}disabled{{/if}} class="btn btn-sm btn-link" data-onclick="onNextPage">next</button>
                </div>
            {{/if}}
        {{else}}
            <div class="adhara-list-wrapper">
                {{include noDataTemplate this}}
            </div>
        {{/if}}
    {{/if}}
</div>